{
  "name": "Python ToDo",
  "dockerFile": "Dockerfile",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-python.debugpy",
        "tamasfe.even-better-toml",
        "pamaron.pytest-runner",
        "bierner.markdown-mermaid",
        "aaron-bond.better-comments"
      ]
    }
  },
  "postCreateCommand": "uv pip install --system ruff pytest pylint mypy && uv sync && ruff check . && pytest || true && python src/check_tools_installed.py"
}
